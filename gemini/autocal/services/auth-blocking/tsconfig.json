{
  "compileOnSave": true,
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  }
}
